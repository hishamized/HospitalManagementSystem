
@{
    ViewData["Title"] = "Slot";
}

<!-- Add Slot Button -->
<button type="button" class="btn btn-primary my-2" id="btnAddSlot">
    <i class="mdi mdi-plus"></i> Add Slot
</button>

<!-- AG Grid placeholder -->
<div id="slotsGrid" class="ag-theme-alpine" style="width: 100%; height: 500px;"></div>

<!-- Add Slot Modal -->
<div class="modal fade" id="addSlotModal" tabindex="-1" aria-labelledby="addSlotModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addSlotModalLabel">Add Slot</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="addSlotForm">
                <div class="modal-body">
                    <!-- Reporting Time -->
                    <div class="mb-3">
                        <label for="ReportingTime" class="form-label">Reporting Time</label>
                        <input type="time" class="form-control" id="ReportingTime" name="ReportingTime" required>
                        <div class="text-danger small" id="ReportingTime_error"></div>
                    </div>

                    <!-- Leaving Time -->
                    <div class="mb-3">
                        <label for="LeavingTime" class="form-label">Leaving Time</label>
                        <input type="time" class="form-control" id="LeavingTime" name="LeavingTime" required>
                        <div class="text-danger small" id="LeavingTime_error"></div>
                    </div>

                    <!-- Days of Week -->
                    <div class="mb-3">
                        <label class="form-label">Days of Week</label>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="1" id="Sunday">
                            <label class="form-check-label" for="Sunday">Sunday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="2" id="Monday">
                            <label class="form-check-label" for="Monday">Monday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="4" id="Tuesday">
                            <label class="form-check-label" for="Tuesday">Tuesday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="8" id="Wednesday">
                            <label class="form-check-label" for="Wednesday">Wednesday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="16" id="Thursday">
                            <label class="form-check-label" for="Thursday">Thursday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="32" id="Friday">
                            <label class="form-check-label" for="Friday">Friday</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input day-checkbox" type="checkbox" value="64" id="Saturday">
                            <label class="form-check-label" for="Saturday">Saturday</label>
                        </div>
                        <div class="text-danger small" id="DaysOfWeek_error"></div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="btnSaveSlot">Save Slot</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Slot Modal -->
<div class="modal fade" id="editSlotModal" tabindex="-1" aria-labelledby="editSlotModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editSlotForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSlotModalLabel">Edit Slot</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editSlotId" />

                    <div class="mb-3">
                        <label for="editReportingTime" class="form-label">Reporting Time</label>
                        <input type="time" class="form-control" id="editReportingTime" required />
                        <div class="text-danger" id="editReportingTime_error"></div>
                    </div>

                    <div class="mb-3">
                        <label for="editLeavingTime" class="form-label">Leaving Time</label>
                        <input type="time" class="form-control" id="editLeavingTime" required />
                        <div class="text-danger" id="editLeavingTime_error"></div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Days of Week</label><br />
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editSunday" value="1">
                            <label class="form-check-label" for="editSunday">Sunday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editMonday" value="2">
                            <label class="form-check-label" for="editMonday">Monday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editTuesday" value="4">
                            <label class="form-check-label" for="editTuesday">Tuesday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editWednesday" value="8">
                            <label class="form-check-label" for="editWednesday">Wednesday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editThursday" value="16">
                            <label class="form-check-label" for="editThursday">Thursday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editFriday" value="32">
                            <label class="form-check-label" for="editFriday">Friday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input edit-day-checkbox" type="checkbox" id="editSaturday" value="64">
                            <label class="form-check-label" for="editSaturday">Saturday</label>
                        </div>
                        <div class="text-danger" id="editDaysOfWeek_error"></div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Slot/slot.js"></script>
}
