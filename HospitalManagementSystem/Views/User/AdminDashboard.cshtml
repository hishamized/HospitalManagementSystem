@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Admin Dashboard</h4>
                    </div>
                </div>
            </div>

            <div class="px-3 my-4">
                <form method="post" asp-controller="User" asp-action="Logout">
                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded-lg shadow-md transition duration-300">
                        Logout
                    </button>
                </form>
            </div>



            <!-- Dashboard Info -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="header-title">Welcome to the Hospital Management System</h4>
                            <p class="text-muted">
                                This application is built using <strong>ASP.NET Core</strong> with <strong>Onion Layered Architecture</strong>, enabling clean separation of concerns and maintainable code.
                            </p>

                            <p class="text-muted">
                                Features include managing <strong>patients, doctors, appointments, departments, slots</strong>, and monitoring <strong>reports and analytics</strong>.
                                The system is designed for easy extensibility and robust performance in a hospital environment.
                            </p>

                            <p class="text-muted mb-0">
                                Built with modern web technologies, it leverages <strong>Bootstrap 5, jQuery, AG Grid</strong> for tables and data grids, and a responsive admin layout powered by the Ubold theme.
                            </p>

                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row-->

        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    © 2025 Hospital Management System — Admin Panel
                </div>
            </div>
        </div>
    </footer>

</div>
