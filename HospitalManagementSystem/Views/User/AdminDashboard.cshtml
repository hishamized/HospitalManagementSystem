@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="min-h-screen bg-gray-900 text-gray-200 flex flex-col">

    <!-- Header -->
    <header class="bg-gray-800 shadow py-4 px-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-red-500">Admin Dashboard</h1>
        <div class="flex items-center gap-4">
            <form method="post" asp-controller="User" asp-action="Logout">
                <button type="submit" class="hover:text-red-500 transition-colors bg-red-600 px-3 py-1 rounded">
                    Logout
                </button>
            </form>
        </div>
    </header>

    <!-- Main Section -->
    <main class="flex-grow p-10">
        <div class="max-w-3xl mx-auto">
            <h2 class="text-3xl font-bold mb-4 text-dark text-center">You’re successfully logged in!</h2>
            <p class="text-gray-400 mb-8 text-center">Manage your hospital system efficiently using the features below.</p>

            <!-- Feature List -->
            <ul class="space-y-4 border border-gray-700">
                <li class="flex justify-between items-center bg-gray-800 rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Patient Management</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        Manage
                    </button>
                </li>

                <li class="flex justify-between items-center bg-gray-800  rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Allergy Records</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        Manage
                    </button>
                </li>

                <li class="flex justify-between items-center bg-gray-800  rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Medical History</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        View
                    </button>
                </li>

                <li class="flex justify-between items-center bg-gray-800  rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Roles & Permissions</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        Manage
                    </button>
                </li>

                <li class="flex justify-between items-center bg-gray-800  rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Admin Accounts</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        View
                    </button>
                </li>

                <li class="flex justify-between items-center bg-gray-800  rounded-lg p-4 hover:border-red-500 transition-all">
                    <span class="font-semibold text-dark">Reports & Analytics</span>
                    <button class="bg-red-600 hover:bg-red-700 text-dark px-4 py-2 rounded-md text-sm font-semibold">
                        View
                    </button>
                </li>
            </ul>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 py-4 text-center text-gray-500 text-sm border-t border-gray-700">
        © 2025 Hospital Management System — Admin Panel
    </footer>
</div>
