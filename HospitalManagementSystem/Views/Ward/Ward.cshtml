@{
    ViewData["Title"] = "Ward Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-dark">Ward Management</h3>
        <button id="btnAddWard" class="btn btn-primary">+ Add Ward</button>
    </div>

    <!-- 🧱 AG GRID TABLE -->
    <div id="wardGrid" class="ag-theme-alpine" style="height: 400px; width: 100%;"></div>
</div>

<!-- 🩺 ADD WARD MODAL -->
<div class="modal fade" id="addWardModal" tabindex="-1" aria-labelledby="addWardLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addWardLabel">Add New Ward</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="wardForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Ward Code</label>
                            <input type="text" name="WardCode" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ward Name</label>
                            <input type="text" name="WardName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ward Type</label>
                            <input type="text" name="WardType" class="form-control" placeholder="General / ICU / Private" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Capacity</label>
                            <input type="number" name="Capacity" class="form-control" min="1" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Occupied Beds</label>
                            <input type="number" name="OccupiedBeds" class="form-control" min="0" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Location</label>
                            <input type="text" name="Location" class="form-control" placeholder="e.g., Block A - 2nd Floor" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="btnSaveWard" class="btn btn-primary">Save Ward</button>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Edit Ward Modal -->
<div class="modal fade" id="editWardModal" tabindex="-1" aria-labelledby="editWardModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="editWardForm">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="editWardModalLabel">Edit Ward</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editWardId">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Ward Code</label>
                            <input type="text" id="editWardCode" class="form-control" readonly>
                        </div>
                        <div class="col-md-6">
                            <label>Ward Name</label>
                            <input type="text" id="editWardName" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Ward Type</label>
                            <input type="text" id="editWardType" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label>Capacity</label>
                            <input type="number" id="editCapacity" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label>Occupied Beds</label>
                            <input type="number" id="editOccupiedBeds" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Location</label>
                            <input type="text" id="editLocation" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label>Description</label>
                            <textarea id="editDescription" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Ward/ward.js"></script>
}