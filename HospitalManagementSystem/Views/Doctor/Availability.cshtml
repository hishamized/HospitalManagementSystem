@{
    ViewData["Title"] = "Doctor Availability";
}
<style>
    .available-box {
        background-color: #28a745 !important;
        color: white;
        font-weight: bold;
        text-align: center;
        transition: all 0.2s ease-in-out;
        border-radius: 6px;
    }

    .unavailable-box {
        background-color: #f0f0f0 !important;
        color: #777;
        text-align: center;
        border-radius: 6px;
    }

    .available-box:hover {
        background-color: #218838 !important;
        transform: scale(1.05);
    }

    .unavailable-box:hover {
        background-color: #d6d6d6 !important;
    }

</style>

<h2 class="mb-4 text-center text-primary">Doctor Availability Schedule</h2>

<div class="mb-4">
    <label for="doctorSelect" class="form-label fw-bold">Select Doctor:</label>
    <select id="doctorSelect" class="form-select" style="width: 100%;"></select>
</div>

<div id="availabilityContainer" style="display:none;">
    <h4 class="text-success mb-3">Weekly Schedule</h4>
    <div class="table-responsive" style="overflow-x:auto; white-space:nowrap;">
        <table class="table table-bordered text-center align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Day</th>
                    @for (int hour = 0; hour < 24; hour++)
                    {
                        <th>@hour:00</th>
                    }

                </tr>
            </thead>
            <tbody id="availabilityTableBody"></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="~/js/Doctor/availability.js"></script>
}
